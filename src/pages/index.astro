---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import SignupForm from '../components/SignupForm.astro';

const seo = {
  title: 'Omniherald | Interoperable & Data-Drive Agri-Tech',
  description: 'Uniting Farmers and Stakeholders in a Revolution of Agricultural Intelligence',
}
---

<style>
  .hero__article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container narrow>
    <article class="hero__article">
      <h1 class="fade-in">Coming Soon</h1>
      <p class="fade-in">Uniting Farmers and Stakeholders in a Revolution of Agricultural Intelligence </p>
    </article>
  </Container>
</Layout>

